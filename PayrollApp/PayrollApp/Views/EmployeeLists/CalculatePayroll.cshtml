@model PayrollApp.Models.CalculatePayroll

@{
    ViewBag.Title = "Calculate Payroll";
}

<h2>Calculate Payroll</h2>

@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryui")

@using (Html.BeginForm("CalculatePayroll","EmployeeLists"))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="form-group">
        @Html.LabelFor(model => model.EmployeeCode, "Employee", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("EmployeeCode", null, htmlAttributes: new { @class = "form-control", @required = "required" })
            @Html.ValidationMessageFor(model => model.EmployeeCode, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.MonthSelected, "Select Month & Year", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.MonthSelected, new { htmlAttributes = new { @class = "form-control datepicker", @required = "required" } })
            @Html.ValidationMessageFor(model => model.MonthSelected, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.TotalHours,"Total Hours Worked", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.TotalHours, new { htmlAttributes = new { @class = "form-control", @required="required" } })
            @Html.ValidationMessageFor(model => model.TotalHours, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Calculate Payroll" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
<script type="text/javascript">
    $("#MonthSelected").datepicker({
        dateFormat: 'M yy'/*,
               minDate: new Date()*/
    });
</script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
